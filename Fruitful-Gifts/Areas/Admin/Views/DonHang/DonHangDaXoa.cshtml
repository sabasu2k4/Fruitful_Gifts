@model IEnumerable<Fruitful_Gifts.Database.DonHang>

@{
    ViewData["Title"] = "Lịch sử đơn hàng đã xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center my-4 font-weight-bold">LỊCH SỬ ĐƠN HÀNG ĐÃ XÓA</h2>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn hàng</th>
            <th>Khách hàng</th>
            <th>Ngày đặt hàng</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MaDh</td>
                <td>@donHang.MaKhNavigation?.HoKh @donHang.MaKhNavigation?.TenKh</td>
                <td>@donHang.NgayDatHang?.ToString("dd/MM/yyyy")</td>
                <td>❌ Đã hủy</td>
                <td>
                    <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#modal-@donHang.MaDh">
                        Xem chi tiết
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modal-@donHang.MaDh" tabindex="-1" aria-labelledby="modalLabel-@donHang.MaDh" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Chi tiết đơn hàng @donHang.MaDh</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Tên</th>
                                                <th class="text-center">Số lượng</th>
                                                <th class="text-end">Đơn giá</th>
                                                <th class="text-end">Thành tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                decimal tongTien = 0;
                                                @foreach (var ct in donHang.ChiTietDonHangs)
                                                {
                                                    string ten = "";
                                                    decimal gia = 0;
                                                    decimal soLuong = ct.SoLuong ?? 0;

                                                    if (ct.MaSpNavigation != null)
                                                    {
                                                        ten = $"🧺 {ct.MaSpNavigation.TenSp}";
                                                        gia = ct.MaSpNavigation.GiaBan ?? 0m;
                                                    }
                                                    else if (ct.MaGqNavigation != null)
                                                    {
                                                        ten = $"🎁 {ct.MaGqNavigation.TenGioQua}";
                                                        gia = ct.MaGqNavigation.GiaBan;
                                                    }

                                                    decimal thanhTien = gia * soLuong;
                                                    tongTien += thanhTien;

                                                    <tr>
                                                        <td>@ten</td>
                                                        <td class="text-center">@soLuong</td>
                                                        <td class="text-end">@string.Format("{0:N0}₫", gia)</td>
                                                        <td class="text-end">@string.Format("{0:N0}₫", thanhTien)</td>
                                                    </tr>
                                                }

                                            }
                                        </tbody>
                                    </table>
                                    <div class="text-end mt-2">
                                        <strong>Tổng tiền:</strong> @string.Format("{0:N0}₫", tongTien)
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container text-center mt-4">
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            @{
                int page = ViewBag.Page ?? 1;
                int totalPages = ViewBag.TotalPages ?? 1;
                int pageSize = ViewBag.PageSize ?? 10;
            }
            @if (page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("DonHangDaXoa", new { page = page - 1, pageSize = pageSize })">&laquo;</a>
                </li>
            }
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("DonHangDaXoa", new { page = i, pageSize = pageSize })">@i</a>
                </li>
            }
            @if (page < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("DonHangDaXoa", new { page = page + 1, pageSize = pageSize })">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>
