@section Scripts {
    <!-- Thêm thư viện SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Xác nhận khôi phục với SweetAlert2
        function confirmRestore(maDh, tenKh) {
            Swal.fire({
                title: 'Xác nhận khôi phục đơn hàng',
                html: `Bạn có chắc muốn khôi phục đơn hàng <b>#${maDh}</b> của khách hàng <b>${tenKh}</b>?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Khôi phục',
                cancelButtonText: 'Hủy bỏ',
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                customClass: {
                    popup: 'animated bounceIn'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    restoreOrder(maDh);
                }
            });
        }

        // Khôi phục đơn hàng
        function restoreOrder(maDh) {
            // Hiển thị loading
            Swal.fire({
                title: 'Đang xử lý...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading()
                }
            });

            $.ajax({
                url: '/Admin/QLDonHang/RestoreDonHang',
                type: 'POST',
                data: { maDH: maDh },
                success: function (res) {
                    if (res.success) {
                        Swal.fire({
                            title: 'Thành công!',
                            text: 'Đơn hàng đã được khôi phục',
                            icon: 'success',
                            confirmButtonColor: '#28a745',
                            timer: 1500,
                            timerProgressBar: true
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: res.message || 'Không thể khôi phục đơn hàng',
                            icon: 'error',
                            confirmButtonColor: '#dc3545'
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        title: 'Lỗi kết nối!',
                        text: 'Không thể kết nối đến máy chủ',
                        icon: 'error',
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        }

        // Hiển thị toast thông báo
        function showToast(message, type = 'success') {
            const toast = $('#liveToast');
            toast.removeClass('bg-success bg-danger bg-warning');

            if (type === 'success') {
                toast.addClass('bg-success');
            } else if (type === 'error') {
                toast.addClass('bg-danger');
            } else {
                toast.addClass('bg-warning');
            }

            $('#toastMessage').text(message);
            const toastInstance = new bootstrap.Toast(toast[0]);
            toastInstance.show();
        }

        // Tự động đóng thông báo sau 5s
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Ngăn modal tự động mở
            $('.modal').modal({ show: false });
        });
    </script>
}