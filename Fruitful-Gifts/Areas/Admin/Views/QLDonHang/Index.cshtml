@model IEnumerable<Fruitful_Gifts.Database.DonHang>

@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var trangThaiMap = new Dictionary<int, (string Text, string BadgeClass, string Icon)> {
        {1, ("Chờ xác nhận", "bg-soft-warning text-warning", "fa-clock")},
        {2, ("Đã xác nhận", "bg-soft-info text-info", "fa-check-circle")},
        {3, ("Đang giao hàng", "bg-soft-primary text-primary", "fa-truck")},
        {4, ("Đã giao hàng", "bg-soft-success text-success", "fa-check-double")},
        {5, ("Hoàn hàng", "bg-soft-secondary text-secondary", "fa-exchange-alt")},
        {6, ("Đã hủy", "bg-soft-danger text-danger", "fa-times-circle")},
        {7, ("Giao hàng thất bại", "bg-soft-dark text-dark", "fa-exclamation-triangle")},
        {8, ("Từ chối", "bg-soft-danger text-danger", "fa-ban")}
    };
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-header-title">
                    <i class="fas fa-shopping-bag text-primary me-2"></i>Quản Lý Đơn Hàng
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Đơn hàng</li>
                    </ol>
                </nav>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <a href="@Url.Action("DonHangDaXoa", "QLDonHang", new { area = "Admin" })"
                       class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-trash-restore me-1"></i> Đơn đã xóa
                    </a>
                    <a href="@Url.Action("SanPhamVaGioQuaBanChayKem", "Thongke", new { area = "Admin" })"
                       class="btn btn-primary btn-sm ms-2">
                        <i class="fas fa-chart-line me-1"></i> Thống kê
                    </a>

                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                <div>@TempData["Success"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@TempData["Error"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- Tìn kiếm -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-filter text-muted me-2"></i>Bộ lọc
            </h5>
            <span class="badge bg-secondary text-white">
                @ViewBag.TotalItems đơn hàng
            </span>
        </div>

        <div class="card-body">
            <form method="get" class="row gy-2 gx-3 align-items-end">

                <!-- Tìm kiếm -->
                <div class="col-md-4">
                    <label class="form-label small mb-1">Tìm kiếm</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Mã đơn, tên KH..." value="@Context.Request.Query["searchString"]">
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="col-md-3">
                    <label class="form-label small mb-1">Trạng thái đơn</label>
                    <select name="trangThai" class="form-select form-select-sm">
                        <option value="">Tất cả trạng thái</option>
                        @foreach (var kv in trangThaiMap)
                        {
                            <option value="@kv.Key" @(Context.Request.Query["trangThai"] == kv.Key.ToString() ? "selected" : "")>
                                @kv.Value.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Ngày từ -->
                <div class="col-md-2">
                    <label class="form-label small mb-1">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control form-control-sm"
                           value="@Context.Request.Query["fromDate"]">
                </div>

                <!-- Ngày đến -->
                <div class="col-md-2">
                    <label class="form-label small mb-1">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control form-control-sm"
                           value="@Context.Request.Query["toDate"]">
                </div>

                <!-- Nút -->
                <div class="col-md-1 d-grid">
                    <button type="submit" class="btn btn-dark btn-sm">
                        <i class="fas fa-filter me-1"></i> Lọc
                    </button>
                </div>
                <div class="col-md-1 d-grid">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm" title="Xóa bộ lọc">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>


    <!--Thống kê nhanh-->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-danger border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Tổng đơn hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TongDonHang</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-warning border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tổng giá trị
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @((ViewBag.TongGiaTriDonHang as decimal?)?.ToString("N0") ?? "0") VNĐ
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-info border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn cũ nhất
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">
                                @(Model.Any() ? Model.OrderBy(d => d.NgayDatHang).FirstOrDefault()?.NgayDatHang?.ToString("dd/MM/yyyy") : "N/A")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-minus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success border-4 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đơn mới nhất
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">
                                @(Model.Any() ? Model.OrderByDescending(d => d.NgayDatHang).FirstOrDefault()?.NgayDatHang?.ToString("dd/MM/yyyy") : "N/A")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Orders Table -->

    <div class="container-fluid px-4 py-3">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <!-- Card Header with Filter Options -->
                    <div class="card-header bg-white border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                        
                            <div class="d-flex">

                                <a href="@Url.Action("ExportToExcel", "QLDonHang", new { searchString = ViewBag.CurrentFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, trangThai = ViewBag.TrangThai })"
                                   class="btn btn-success mb-3">
                                    <i class="fas fa-file-excel"></i> Xuất Excel
                                </a>

                            </div>
                        </div>
                    </div>

                    <!-- Order List Table -->
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="100" class="ps-4">MÃ ĐH</th>
                                        <th>KHÁCH HÀNG</th>
                                        <th width="120">NGÀY ĐẶT</th>
                                        <th width="150" class="text-end">TỔNG TIỀN</th>
                                        <th width="200">TRẠNG THÁI</th>
                                        <th width="120">THANH TOÁN</th>
                                        <th width="120" class="text-center pe-4">THAO TÁC</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var donHang in Model)
                                        {
                                            var statusInfo = trangThaiMap[donHang.TrangThai ?? 1];
                                            <tr>
                                                <td class="ps-4 fw-bold">#@donHang.MaDh</td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar avatar-sm me-3">
                                                            <img src="https://ui-avatars.com/api/?name=@donHang.MaKhNavigation?.HoKh+@donHang.MaKhNavigation?.TenKh&background=random"
                                                                 class="rounded-circle" alt="Avatar">
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0">@donHang.MaKhNavigation?.HoKh @donHang.MaKhNavigation?.TenKh</h6>
                                                            <small class="text-muted">@donHang.SoDienThoai</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-muted">@donHang.NgayDatHang?.ToString("dd/MM/yyyy")</div>
                                                    <small class="text-muted">@donHang.NgayDatHang?.ToString("HH:mm")</small>
                                                </td>
                                                <td class="text-end fw-bold text-primary">
                                                    @(donHang.TongTienDonHang?.ToString("N0") + " VNĐ")
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <select id="status-@donHang.MaDh" class="form-select form-select-sm w-auto"
                                                        @(donHang.TrangThai is 4 or 5 or 6 or 7 or 8 ? "disabled" : "")
                                                                onchange="changeStatusTemp(@donHang.MaDh, this)">
                                                            <option value="1" @(donHang.TrangThai == 1 ? "selected" : "")>⏳ Chờ xác nhận</option>
                                                            <option value="2" @(donHang.TrangThai == 2 ? "selected" : "")>✅ Đã xác nhận</option>
                                                            <option value="3" @(donHang.TrangThai == 3 ? "selected" : "")>🚚 Đang giao hàng</option>
                                                            <option value="4" @(donHang.TrangThai == 4 ? "selected" : "")>✔️ Đã giao hàng</option>
                                                            <option value="5" @(donHang.TrangThai == 5 ? "selected" : "")>🔄 Hoàn hàng</option>
                                                            <option value="6" @(donHang.TrangThai == 6 ? "selected" : "")>❌ Đã hủy</option>
                                                            <option value="7" @(donHang.TrangThai == 7 ? "selected" : "")>⚠️ Giao hàng thất bại</option>
                                                            <option value="8" @(donHang.TrangThai == 8 ? "selected" : "")>🚫 Từ chối</option>
                                                        </select>

                                                        <button class="btn btn-outline-dark btn-sm"
                                                                onclick="capNhatDonHang(@donHang.MaDh, $('#status-@donHang.MaDh').val())"
                                                        @(donHang.TrangThai is 4 or 5 or 6 or 7 or 8 ? "disabled" : "")>
                                                            <i class="bi bi-save"></i> Lưu
                                                        </button>
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (donHang.TrangThaiThanhToan == 1)
                                                    {
                                                        <span class="badge bg-success bg-opacity-10 text-success">
                                                            <i class="fas fa-check-circle me-1"></i> Đã thanh toán
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                            <i class="fas fa-clock me-1"></i> Chưa thanh toán
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center pe-4">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button class="btn btn-outline-primary" data-bs-toggle="modal"
                                                                data-bs-target="#orderModal_@donHang.MaDh" title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </button>

                                                        <button class="btn btn-outline-info" title="In hóa đơn" onclick="printOrder(@donHang.MaDh)">
                                                            <i class="fas fa-print"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7">
                                                <div class="text-center py-5">
                                                    <img src="~/Admin/gs.jpg" alt="Empty" style="width: 100px; opacity: 0.6">
                                                    <h5 class="mt-3 text-muted">Không có đơn hàng nào phù hợp với kết quả</h5>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <div class="card-footer bg-white border-top">
                        <div class="card-footer bg-white">
                            @{
                                var currentPage = (int)ViewData["CurrentPage"];
                                var totalPages = (int)ViewData["TotalPages"];
                                var searchString = Context.Request.Query["searchString"];
                                var trangThai = Context.Request.Query["trangThai"];
                                var ngayDat = Context.Request.Query["ngayDat"];
                            }

                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center mb-0">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, searchString, trangThai, ngayDat })">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i, searchString, trangThai, ngayDat })">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, searchString, trangThai, ngayDat })">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Detail Modal -->
    @foreach (var donHang in Model)
    {
        
        <div class="modal fade" id="orderModal_@donHang.MaDh" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-file-invoice me-2"></i>CHI TIẾT ĐƠN HÀNG #@donHang.MaDh
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="fas fa-user me-2"></i>THÔNG TIN KHÁCH HÀNG</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label text-muted small mb-1">Họ tên</label>
                                                <p class="mb-0 fw-bold">@donHang.MaKhNavigation?.HoKh @donHang.MaKhNavigation?.TenKh</p>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label text-muted small mb-1">Điện thoại</label>
                                                <p class="mb-0 fw-bold">@donHang.SoDienThoai</p>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label text-muted small mb-1">Địa chỉ nhận hàng</label>
                                                <p class="mb-0 fw-bold">@donHang.DiaChiNhanHang</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="fas fa-receipt me-2"></i>THÔNG TIN ĐƠN HÀNG</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label text-muted small mb-1">Ngày đặt</label>
                                                <p class="mb-0 fw-bold">@donHang.NgayDatHang?.ToString("dd/MM/yyyy HH:mm")</p>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label text-muted small mb-1">Phương thức TT</label>
                                                <p class="mb-0 fw-bold">@donHang.MaPtNavigation?.TenPt</p>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label text-muted small mb-1">Ghi chú</label>
                                                <p class="mb-0 fw-bold">@(string.IsNullOrEmpty(donHang.GhiChu) ? "Không có" : donHang.GhiChu)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0"><i class="fas fa-boxes me-2"></i>SẢN PHẨM ĐÃ ĐẶT</h6>
                                    <span class="badge bg-primary">@donHang.ChiTietDonHangs.Count sản phẩm</span>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th width="40">STT</th>
                                                <th>SẢN PHẨM</th>
                                                <th width="100" class="text-end">ĐƠN GIÁ</th>
                                                <th width="80" class="text-center">SL</th>
                                                <th width="120" class="text-end">THÀNH TIỀN</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int stt = 1;
                                                decimal total = 0;
                                                foreach (var item in donHang.ChiTietDonHangs)
                                                {
                                                    var productName = item.MaSpNavigation != null ?
                                                    $"{item.MaSpNavigation.TenSp}" :
                                                    $"{item.MaGqNavigation?.TenGioQua}";

                                                    var price = item.MaSpNavigation?.GiaBan ?? item.MaGqNavigation?.GiaBan ?? 0;
                                                    var quantity = item.SoLuong ?? 0;
                                                    var subtotal = price * quantity;
                                                    total += subtotal;

                                                    <tr>
                                                        <td>@stt</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                @if (item.MaSpNavigation != null)
                                                                {
                                                                    <img src="@item.MaSpNavigation.HinhAnh" width="40" class="rounded me-2" alt="@item.MaSpNavigation.TenSp">
                                                                }
                                                                else
                                                                {
                                                                    <div class="avatar avatar-xs me-2">
                                                                        <span class="avatar-title bg-light rounded">
                                                                            <i class="fas fa-gift text-primary"></i>
                                                                        </span>
                                                                    </div>
                                                                }
                                                                <div>@productName</div>
                                                            </div>
                                                        </td>
                                                        <td class="text-end">@price.ToString("N0")VNĐ</td>
                                                        <td class="text-center">@quantity</td>
                                                        <td class="text-end">@subtotal.ToString("N0")VNĐ</td>
                                                    </tr>
                                                    stt++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="row">
                                    <div class="col-md-6">
                                        
                                       
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Tổng tiền hàng:</span>
                                            <strong>@total.ToString("N0")VNĐ</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Phí vận chuyển:</span>
                                            <strong>@(donHang.PhiVanChuyenBanHang?.ToString("N0") + "VNĐ")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between fw-bold fs-5 text-primary">
                                            <span>Tổng hóa đơn:</span>
                                            <span>@donHang.TongTienDonHang?.ToString("N0")VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i> Đóng
                        </button>
                        <button type="button" class="btn btn-primary" onclick="printOrder(@donHang.MaDh)">
                            <i class="fas fa-print me-1"></i> In hóa đơn
                        </button>
                    </div>
                </div>
