    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // Hàm cập nhật trạng thái đơn hàng
            function capNhatDonHang(maDH) {
                var selectElement = $("#status-" + maDH);
                var trangThai = selectElement.val();
                var currentStatus = selectElement.data('current-status') || 1; // Mặc định là 1 nếu null

                // Kiểm tra client-side trước
                if (!isValidTransition(currentStatus, trangThai)) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Chuyển trạng thái không hợp lệ theo quy trình.'
                    });
                    selectElement.val(currentStatus); // Reset về trạng thái cũ
                    return;
                }

                Swal.fire({
                    title: 'Xác nhận cập nhật',
                    text: `Bạn có chắc muốn chuyển từ "${getStatusText(currentStatus)}" sang "${getStatusText(trangThai)}"?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Cập nhật',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/DonHang/CapNhatDonHang',
                            type: 'POST',
                            data: {
                                maDh: maDH,
                                trangThai: trangThai
                            },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Thành công!',
                                        text: 'Đã cập nhật trạng thái',
                                        timer: 1500
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Lỗi',
                                        text: response.message
                                    });
                                    selectElement.val(currentStatus);
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Lỗi hệ thống',
                                    text: 'Không thể kết nối đến server'
                                });
                                selectElement.val(currentStatus);
                            }
                        });
                    } else {
                        selectElement.val(currentStatus);
                    }
                });
            }

            // Helper functions
            function isValidTransition(currentStatus, newStatus) {
                const rules = {
                    1: [2, 6],  // Chờ xác nhận → Xác nhận, Hủy
                    2: [3, 6],   // Đã xác nhận → Đang giao, Hủy
                    3: [4, 7],   // Đang giao → Đã giao, Thất bại
                    4: [5],      // Đã giao → Hoàn hàng
                    5: [],       // Hoàn hàng → Không thể đổi
                    6: [],       // Đã hủy → Không thể đổi
                    7: [3]       // Giao thất bại → Giao lại
                };
                return rules[currentStatus]?.includes(parseInt(newStatus)) || false;
            }

            function getStatusText(status) {
                const texts = {
                    1: "⏳ Chờ xác nhận", 2: "✅ Đã xác nhận",
                    3: "🚚 Đang giao", 4: "✔️ Đã giao",
                    5: "🔄 Hoàn hàng", 6: "❌ Đã hủy",
                    7: "⚠️ Giao thất bại"
                };
                return texts[status] || "❓ Không xác định";
            }
            // Hàm in hóa đơn
            function printOrder(orderId, status, phuongThucBan) {
                if (status != 4) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Không thể in hóa đơn',
                        text: 'Chỉ được in hóa đơn khi đơn hàng đã giao!',
                        confirmButtonText: 'OK'
                    });
                    return;
                }

                let $clone = $('#orderModal_' + orderId + ' .modal-content').clone();

                $clone.find('.modal-footer').remove();

                if (phuongThucBan.toLowerCase() === 'offline') {
                    $clone.find('.customer-info').remove();
                }

                const statusText = getStatusText(status);
                const originalContent = $('body').html();

                // Nếu offline ➜ thêm text
                const offlineNote = (phuongThucBan.toLowerCase() === 'offline')
                    ? `<p class="fw-bold text-danger">Đơn hàng Offline</p>`
                    : '';

                $('body').html(`
                <div class="container mt-4">
                  <div class="text-center mb-4">
                    <h2 class="mb-1">FRUITFUL GIFTS</h2>
                    <p class="text-muted mb-0">Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</p>
                    <p class="text-muted">Điện thoại: 0909 123 456</p>
                    ${offlineNote}
                  </div>
                  <div class="mb-3 fw-bold">
                    Trạng thái đơn hàng: ${statusText}
                  </div>
                  ${$clone.html()}
                </div>
              `);

                window.print();
                $('body').html(originalContent);
            }




            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        </script>
    }