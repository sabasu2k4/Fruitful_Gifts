    @model IEnumerable<Fruitful_Gifts.Database.DonHang>

    @{
        ViewData["Title"] = "Quản Lý Đơn Hàng";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
        var today = DateTime.Now.ToString("yyyy-MM-dd");
        // Map trạng thái với thông tin hiển thị
        var trangThaiMap = new Dictionary<int, (string Text, string BadgeClass, string Icon)> {
            {1, ("Chờ xác nhận", "bg-soft-warning text-warning", "fa-clock")},
            {2, ("Đã xác nhận", "bg-soft-info text-info", "fa-check-circle")},
            {3, ("Đang giao hàng", "bg-soft-primary text-primary", "fa-truck")},
            {4, ("Đã giao hàng", "bg-soft-success text-success", "fa-check-double")},
            {5, ("Hoàn hàng", "bg-soft-secondary text-secondary", "fa-exchange-alt")},
            {6, ("Đã hủy", "bg-soft-danger text-danger", "fa-times-circle")},
            {7, ("Giao hàng thất bại", "bg-soft-dark text-dark", "fa-exclamation-triangle")}

        };

        // Luồng chuyển trạng thái hợp lệ
        var trangThaiTransitions = new Dictionary<int, List<int>> {
            {1, new List<int>{2, 6}}, // Chờ xác nhận → Xác nhận, Hủy
            {2, new List<int>{3, 6}},    // Đã xác nhận → Đang giao, Hủy
            {3, new List<int>{4, 7}},    // Đang giao → Đã giao, Thất bại
            {4, new List<int>{5}},       // Đã giao → Hoàn hàng
            {5, new List<int>{}},        // Hoàn hàng → Không thể đổi
            {6, new List<int>{}},        // Đã hủy → Không thể đổi
            {7, new List<int>{3}}      // Giao thất bại → Giao lại

        };

        // Hàm lấy text hiển thị cho option
        string GetStatusOptionText(int status)
        {
            return status switch
            {
                1 => "⏳ Chờ xác nhận",
                2 => "✅ Đã xác nhận",
                3 => "🚚 Đang giao hàng",
                4 => "✔️ Đã giao hàng",
                5 => "🔄 Hoàn hàng",
                6 => "❌ Đã hủy",
                7 => "⚠️ Giao hàng thất bại",

                _ => "❓ Không xác định"
            };
        }
    }
@{
    ViewData["Title"] = "Danh sách Đơn hàng";

    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;

    var searchString = GetQuery("searchString");
    var fromDate = GetQuery("fromDate");
    var toDate = GetQuery("toDate");
    var trangThai = GetQuery("trangThai");

    int maxPagesToShow = 7;
    int halfRange = maxPagesToShow / 2;
    int startPage = currentPage - halfRange;
    int endPage = currentPage + halfRange;

    if (startPage < 1)
    {
        endPage += 1 - startPage;
        startPage = 1;
    }
    if (endPage > totalPages)
    {
        startPage -= endPage - totalPages;
        endPage = totalPages;
    }
    if (startPage < 1) startPage = 1;
}

@functions {
    string GetQuery(string key)
    {
        if (Context.Request.Query.TryGetValue(key, out var value))
        {
            return value.ToString();
        }
        return "";
    }
}

    <style>
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            position: relative;
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            overflow: hidden;
            transform: translateY(-10px);
            border-left: 5px solid var(--stat-color, #1a73e8);
        }

            .stat-card:hover {
                transform: translateY(-15px);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
            }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            font-size: 24px;
        }

        /* Các màu nhẹ */
        .bg-danger-light {
            background: rgba(220, 53, 69, 0.15);
            color: #dc3545;
        }

        .bg-warning-light {
            background: rgba(255, 193, 7, 0.15);
            color: #ffc107;
        }

        .bg-info-light {
            background: rgba(23, 162, 184, 0.15);
            color: #17a2b8;
        }

        .bg-success-light {
            background: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }

        .bg-primary-light {
            background: rgba(13, 110, 253, 0.15);
            color: #0d6efd;
        }

        /* Notification badge */
        .notification-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff4757;
            color: white;
            border-radius: 50%;
            min-width: 24px;
            height: 24px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 12px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            padding: 0 6px;
        }

        /* Màu viền trái cho từng thẻ */
        .stat-card:nth-child(1) {
            --stat-color: #dc3545;
        }

        .stat-card:nth-child(2) {
            --stat-color: #ffc107;
        }

        .stat-card:nth-child(3) {
            --stat-color: #0d6efd;
        }

        .stat-card:nth-child(4) {
            --stat-color: #17a2b8;
        }

        .stat-card:nth-child(5) {
            --stat-color: #28a745;
        }
    </style>
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="page-header-title">
                        <i class="fas fa-shopping-bag text-primary me-2"></i>Quản Lý Đơn Hàng
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Đơn hàng</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-auto">
                    <div class="btn-group">
                        <a href="@Url.Action("DonHangDaXoa", "QLDonHang", new { area = "Admin" })"
                           class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash-restore me-1"></i> Đơn đã xóa
                        </a>
                        <a href="@Url.Action("SanPhamVaGioQuaBanChayKem", "Thongke", new { area = "Admin" })"
                           class="btn btn-primary btn-sm ms-2">
                            <i class="fas fa-chart-line me-1"></i> Thống kê
                        </a>
                        <a href="@Url.Action("ChiTietThanhToan", "QLDonHang", new { area = "Admin" })"
                           class="btn btn-info btn-sm ms-2">
                            <i class="fas fa-receipt me-1"></i> Thanh toán
                        </a>

                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-check-circle me-2"></i>
                    <div>@TempData["Success"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>@TempData["Error"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        <!-- Filter Card -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-filter text-muted me-2"></i>Bộ lọc
                </h5>
                <span class="badge bg-secondary text-white">
                    @ViewBag.TotalItems đơn hàng
                </span>
            </div>
            <div class="card-body">
                <form method="get" class="row gy-2 gx-3 align-items-end">
                    <!-- Search Input -->
                    <div class="col-md-4">
                        <label class="form-label small mb-1">Tìm kiếm</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchString" class="form-control"
                                   placeholder="Mã đơn, tên KH..." value="@Context.Request.Query["searchString"]">
                        </div>
                    </div>

                    <!-- Status Filter -->
                    <div class="col-md-3">
                        <label class="form-label small mb-1">Trạng thái đơn</label>
                        <select name="trangThai" class="form-select form-select-sm">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (var kv in trangThaiMap)
                            {
                                <option value="@kv.Key" @(Context.Request.Query["trangThai"] == kv.Key.ToString() ? "selected" : "")>
                                    @kv.Value.Text
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Từ ngày -->
                    <div class="col-md-2">
                        <label class="form-label small mb-1">Từ ngày</label>
                        <input type="date" name="fromDate" class="form-control form-control-sm"
                               value="@Context.Request.Query["fromDate"]"
                               max="@today">
                    </div>

                    <!-- Đến ngày -->
                    <div class="col-md-2">
                        <label class="form-label small mb-1">Đến ngày</label>
                        <input type="date" name="toDate" class="form-control form-control-sm"
                               value="@Context.Request.Query["toDate"]"
                               max="@today">
                    </div>
                    <!-- Buttons -->
                    <div class="col-md-1 d-grid">
                        <button type="submit" class="btn btn-dark btn-sm">
                            <i class="fas fa-filter me-1"></i> Lọc
                        </button>
                    </div>
                    <div class="col-md-1 d-grid">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm" title="Xóa bộ lọc">
                            <i class="fas fa-sync-alt"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon bg-primary-light">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-value">@ViewBag.DonHangChoXacNhan</div>
                <div class="stat-label">Đơn chờ xác nhận</div>
                <!-- Thêm badge đỏ ở góc phải -->
                <span class="notification-badge">
                    @(ViewBag.DonHangChoXacNhan > 99 ? "99+" : ViewBag.DonHangChoXacNhan.ToString())
                </span>
            </div>
            <!-- Tổng đơn hàng -->
            <div class="stat-card">
                <div class="stat-icon bg-danger-light">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-value">@ViewBag.TongDonHang</div>
                <div class="stat-label">Tổng đơn hàng</div>
            </div>

            <!-- Tổng giá trị -->
            <div class="stat-card">
                <div class="stat-icon bg-warning-light">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stat-value">
                    @((ViewBag.TongGiaTriDonHang as decimal?)?.ToString("N0") ?? "0") VNĐ
                </div>
                <div class="stat-label">Tổng giá trị</div>
            </div>

            <!-- Đơn cũ nhất -->
            <div class="stat-card">
                <div class="stat-icon bg-info-light">
                    <i class="fas fa-calendar-minus"></i>
                </div>
                <div class="stat-value">
                    @(ViewBag.OldestOrderDate != null ? ((DateTime)ViewBag.OldestOrderDate).ToString("dd/MM/yyyy") : "N/A")
                </div>
                <div class="stat-label">Đơn cũ nhất</div>
            </div>

            <!-- Đơn mới nhất -->
            <div class="stat-card">
                <div class="stat-icon bg-success-light">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-value">
                    @(ViewBag.NewestOrderDate != null ? ((DateTime)ViewBag.NewestOrderDate).ToString("dd/MM/yyyy") : "N/A")
                </div>
                <div class="stat-label">Đơn mới nhất</div>
            </div>
        </div>


        <!-- Orders Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex">
                        <a href="@Url.Action("ExportToExcel", "QLDonHang", new { searchString = ViewBag.CurrentFilter, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate, trangThai = ViewBag.TrangThai })"
                           class="btn btn-success mb-3">
                            <i class="fas fa-file-excel"></i> Xuất Excel
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="100" class="ps-4">MÃ ĐH</th>
                                <th>KHÁCH HÀNG</th>
                                <th width="120">NGÀY ĐẶT</th>
                                <th width="150" class="text-end">TỔNG TIỀN</th>
                                <th width="200">TRẠNG THÁI</th>
                                <th width="120">THANH TOÁN</th>
                                <th width="120" class="text-center pe-4">THAO TÁC</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var donHang in Model)
                                {
                                    var statusInfo = trangThaiMap[donHang.TrangThai ?? 1];
                                    <tr>
                                        <td class="ps-4 fw-bold">#@donHang.MaDh</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-sm me-3">
                                                    <img src="https://ui-avatars.com/api/?name=@donHang.MaKhNavigation?.HoKh+@donHang.MaKhNavigation?.TenKh&background=random"
                                                         class="rounded-circle" alt="Avatar">
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@donHang.MaKhNavigation?.HoKh @donHang.MaKhNavigation?.TenKh</h6>
                                                    <small class="text-muted">@donHang.SoDienThoai</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-muted">@donHang.NgayDatHang?.ToString("dd/MM/yyyy")</div>
                                            <small class="text-muted">@donHang.NgayDatHang?.ToString("HH:mm")</small>
                                        </td>
                                        <td class="text-end fw-bold text-primary">
                                            @(donHang.TongTienDonHang?.ToString("N0") + " VNĐ")
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <select id="status-@donHang.MaDh"
                                                        class="form-select form-select-sm w-auto"
                                                        data-current-status="@(donHang.TrangThai ?? 1)"
                                                @((donHang.TrangThai ?? 1) is 5 or 6 ? "disabled" : "")>
                                                    <!-- Chỉ disable các trạng thái KHÔNG thể thay đổi -->
                                                    <!-- Giữ lại trạng thái hiện tại -->
                                                    <option value="@(donHang.TrangThai ?? 1)" selected>
                                                        @GetStatusOptionText(donHang.TrangThai ?? 1)
                                                    </option>

                                                    <!-- Chỉ hiển thị các trạng thái có thể chuyển đổi -->
                                                    @foreach (var nextStatus in trangThaiTransitions[donHang.TrangThai ?? 1])
                                                    {
                                                        <option value="@nextStatus">@GetStatusOptionText(nextStatus)</option>
                                                    }
                                                </select>

                                                <button class="btn btn-outline-dark btn-sm"
                                                        onclick="capNhatDonHang(@donHang.MaDh)"
                                                @((donHang.TrangThai ?? 1) is 5 or 6 ? "disabled" : "")>
                                                    <!-- Đồng bộ với select box -->
                                                    <i class="bi bi-save"></i> Lưu
                                                </button>
                                            </div>
                                        </td>
                                        <td>
                                            @if (donHang.TrangThaiThanhToan == 1)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">
                                                    <i class="fas fa-check-circle me-1"></i> Đã thanh toán
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                    <i class="fas fa-clock me-1"></i> Chưa thanh toán
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center pe-4">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" data-bs-toggle="modal"
                                                        data-bs-target="#orderModal_@donHang.MaDh" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </button>

                                                <button class="btn btn-outline-info"
                                                        title="In hóa đơn"
                                                        onclick="printOrder(@donHang.MaDh, @donHang.TrangThai, '@donHang.PhuongThucBan')"
                                                @(donHang.TrangThai != 4 ? "disabled" : "")>
                                                    <i class="fas fa-print"></i>
                                                </button>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">
                                        <div class="text-center py-5">
                                            <img src="~/Admin/gs.jpg" alt="Empty" style="width: 100px; opacity: 0.6">
                                            <h5 class="mt-3 text-muted">Không có đơn hàng nào phù hợp với kết quả</h5>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new {
                page = currentPage - 1,
                searchString,
                fromDate,
                toDate,
                trangThai
            })">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new {
                    page = 1,
                    searchString,
                    fromDate,
                    toDate,
                    trangThai
                })">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new {
                    page = i,
                    searchString,
                    fromDate,
                    toDate,
                    trangThai
                })">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new {
                    page = totalPages,
                    searchString,
                    fromDate,
                    toDate,
                    trangThai
                })">@totalPages</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new {
                page = currentPage + 1,
                searchString,
                fromDate,
                toDate,
                trangThai
            })">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        </div>

        <!-- Order Detail Modal -->
        @foreach (var donHang in Model)
        {

            <div class="modal fade" id="orderModal_@donHang.MaDh" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title">
                                <i class="fas fa-file-invoice me-2"></i>CHI TIẾT ĐƠN HÀNG #@donHang.MaDh
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm mb-3">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0"><i class="fas fa-user me-2"></i>THÔNG TIN KHÁCH HÀNG</h6>
                                        </div>
                                        <div class="card-body customer-info">

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label text-muted small mb-1">Họ tên</label>
                                                    <p class="mb-0 fw-bold">@donHang.MaKhNavigation?.HoKh @donHang.MaKhNavigation?.TenKh</p>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label text-muted small mb-1">Điện thoại</label>
                                                    <p class="mb-0 fw-bold">@donHang.SoDienThoai</p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label text-muted small mb-1">Địa chỉ nhận hàng</label>
                                                    <p class="mb-0 fw-bold">@donHang.DiaChiNhanHang</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0"><i class="fas fa-receipt me-2"></i>THÔNG TIN ĐƠN HÀNG</h6>
                                        </div>
                                        <div class="card-body customer-info">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label text-muted small mb-1">Ngày đặt</label>
                                                    <p class="mb-0 fw-bold">@donHang.NgayDatHang?.ToString("dd/MM/yyyy HH:mm")</p>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label text-muted small mb-1">Phương thức TT</label>
                                                    <p class="mb-0 fw-bold">@donHang.MaPtNavigation?.TenPt</p>
                                                </div>
                                                <div class="col-12">
