@model Fruitful_Gifts.Database.DanhMucGioQua
@{
    ViewData["Title"] = "Thêm danh mục giỏ quà";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var danhMucChaList = ViewBag.DanhMucChaList as List<Fruitful_Gifts.Database.DanhMucGioQua>;
}

<h2>Thêm danh mục giỏ quà</h2>

<form asp-action="ThemDanhMucGioQua" asp-controller="QuanLyDanhMuc" asp-area="Admin" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="TenDm">Tên danh mục</label>
        <input type="text" class="form-control" name="TenDm" required />
    </div>

    <div class="form-group">
        <label for="DanhMucChaId">Danh mục cha (bỏ trống nếu là danh mục cha)</label>
        <select class="form-control" name="DanhMucChaId">
            <option value="">-- Không chọn --</option>
            @foreach (var dm in danhMucChaList)
            {
                <option value="@dm.MaDm">@dm.TenDm</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ImageUpload">Hình ảnh</label>
        <input type="file" class="form-control" name="ImageUpload" accept="image/*" />
    </div>

    <div class="form-group">
        <label for="TrangThai">Trạng thái</label>
        <select class="form-control" name="TrangThai">
            <option value="1">Hiển thị</option>
            <option value="0">Ẩn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Thêm</button>
</form>
