@model Fruitful_Gifts.Database.DonHang

@{
    ViewData["Title"] = "Cập nhật trạng thái đơn hàng";
    Layout = "_LayoutAdmin";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập nhật trạng thái đơn hàng #@Model.MaDh</h6>
    </div>
    <div class="card-body">
        <form asp-action="CapNhatTrangThai" asp-area="Admin" asp-controller="QuanLyDonHang" asp-route-id="@Model.MaDh" method="post">

            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDh" />

            <div class="form-group mb-3">
                <label class="control-label">Trạng thái hiện tại</label>
                <div>
                    <span class="badge @GetStatusBadgeClass(Model.TrangThai)">
                        @Model.TrangThaiNavigation?.TenTrangThai
                    </span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="control-label">Cập nhật trạng thái mới</label>
                <select asp-for="TrangThai" class="form-select">
                    @foreach (var item in ViewBag.TrangThaiList as List<SelectListItem>)
                    {
                        <option value="@item.Value" selected="@(item.Value == Model.TrangThai.ToString())">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GhiChu" class="control-label">Ghi chú</label>
                <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
                <a href="/Admin/QuanLyDonHang/ChiTiet/@Model.MaDh" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(int? status)
    {
        return status switch
        {
            1 => "bg-secondary",    // Chờ xác nhận
            2 => "bg-primary",      // Đã xác nhận
            3 => "bg-info",         // Đang giao hàng
            4 => "bg-success",      // Đã giao hàng
            5 => "bg-warning",      // Hoàn hàng
            6 => "bg-danger",       // Đã hủy
            7 => "bg-dark",         // Giao hàng thất bại
            8 => "bg-danger",       // Từ chối
            _ => "bg-secondary",
        };
    }
}