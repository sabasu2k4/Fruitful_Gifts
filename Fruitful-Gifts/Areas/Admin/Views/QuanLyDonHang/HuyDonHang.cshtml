@model Fruitful_Gifts.Database.DonHang

@{
    ViewData["Title"] = "Hủy đơn hàng";
    Layout = "_LayoutAdmin";
 }

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">Xác nhận hủy đơn hàng #@Model.MaDh</h6>
    </div>
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="alert alert-warning">
            <h5 class="alert-heading">Bạn có chắc chắn muốn hủy đơn hàng này?</h5>
            <p class="mb-0">Thao tác này không thể hoàn tác. Vui lòng xác nhận lại trước khi tiếp tục.</p>
        </div>

        <div class="mb-4">
            <h5>Thông tin đơn hàng</h5>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Khách hàng:</label>
                        <p>@(Model.MaKhNavigation?.TenKh ?? "Khách vãng lai")</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày đặt hàng:</label>
                        <p>@Model.NgayDatHang?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tổng tiền:</label>
                        <p>@Model.TongTienDonHang?.ToString("N0") ₫</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái hiện tại:</label>
                        <p>
                            <span class="badge @GetStatusBadgeClass(Model.TrangThai)">
                                @Model.TrangThaiNavigation?.TenTrangThai
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="HuyDonHang">
            <input type="hidden" asp-for="MaDh" />
            <div class="form-group mb-3">
                <label class="control-label">Lý do hủy</label>
                <textarea name="lyDoHuy" class="form-control" rows="3" required></textarea>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-check"></i> Xác nhận hủy
                </button>
                <a asp-action="ChiTiet" asp-route-id="@Model.MaDh" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(int? status)
    {
        return status switch
        {
            1 => "bg-secondary",    // Chờ xác nhận
            2 => "bg-primary",      // Đã xác nhận
            3 => "bg-info",         // Đang giao hàng
            4 => "bg-success",      // Đã giao hàng
            5 => "bg-warning",      // Hoàn hàng
            6 => "bg-danger",       // Đã hủy
            7 => "bg-dark",         // Giao hàng thất bại
            8 => "bg-danger",       // Từ chối
            _ => "bg-secondary",
        };
    }
}