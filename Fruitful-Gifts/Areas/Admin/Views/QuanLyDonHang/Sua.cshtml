@model Fruitful_Gifts.Database.DonHang

@{
    Layout = "_LayoutAdmin";
}
@{
    ViewData["Title"] = "Cập nhật đơn hàng";
}

<h2>Cập nhật đơn hàng</h2>

<form asp-action="Sua" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MaDh" />

    <div class="mb-3">
        <label class="form-label">Trạng thái đơn hàng</label>
        <select asp-for="TrangThai" class="form-select">
            @foreach (var item in ViewBag.TrangThaiList)
            {
                <option value="@item.Key"
                        selected="@(item.Key == Model.TrangThai.GetValueOrDefault() ? "selected" : null)">
                    @item.Value
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="GhiChu" class="form-label"></label>
        <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
