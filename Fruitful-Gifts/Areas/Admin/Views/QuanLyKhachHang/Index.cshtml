@model IEnumerable<Fruitful_Gifts.Database.BinhLuan>

@{
    Layout = "_LayoutAdmin";
}
<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-4">
    <h2 class="mb-4">Danh Sách Bình Luận</h2>

    <form method="get" asp-action="Index" class="form-inline mb-4 w-100">
        <div class="input-group w-100 mb-2">
            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo tên khách hàng, sản phẩm hoặc giỏ quà"
                   value="@ViewBag.SearchTerm" aria-label="Search term" />
            <button type="submit" class="btn btn-primary ms-2">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </div>

        <div class="form-group">
            <label for="trangThai">Trạng thái:</label>
            <select name="trangThai" id="trangThai" class="form-control w-25">
                <option value="">Tất cả</option>
                <option value="1" @(ViewBag.TrangThai?.ToString() == "1" ? "selected" : "")>Hiển thị</option>
                <option value="0" @(ViewBag.TrangThai?.ToString() == "0" ? "selected" : "")>Ẩn</option>
            </select>
        </div>
    </form>

    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Khách Hàng</th>
                <th>Đánh Giá</th>
                <th>Sản Phẩm / Giỏ Quà</th>
                <th>Nội Dung</th>
                <th>Ngày Bình Luận</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bl in Model)
            {
                <tr>
                    <td>@bl.MaKhNavigation?.TenKh</td>
                    <td>@bl.SoSao sao</td>
                    <td>
                        @if (bl.MaSpNavigation != null)
                        {
                            <span>Sản phẩm: <strong>@bl.MaSpNavigation.TenSp</strong></span>
                        }
                        else if (bl.MaGqNavigation != null)
                        {
                            <span>Giỏ quà: <strong>@bl.MaGqNavigation.TenGioQua</strong></span>
                        }
                        else
                        {
                            <span><em>Không xác định</em></span>
                        }
                    </td>
                    <td>@bl.NoiDung</td>
                    <td>@(bl.NgayBinhLuan?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        @if (bl.TrangThai == 1)
                        {
                            <span class="badge bg-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Đã ẩn</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("ToggleCommentVisibility", "QuanLyKhachHang", new { id = bl.IdBinhLuan })" class="btn btn-sm btn-warning">
                            @if (bl.TrangThai==0)
                            {
                                <span class="fas fa-eye">Hiển</span>
                            }
                            else
                            {
                                <span class="fas fa-eye-slash"> Ẩn</span>
                            }
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, trangThai = ViewBag.TrangThai })">&laquo;</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm, trangThai = ViewBag.TrangThai })">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, trangThai = ViewBag.TrangThai })">&raquo;</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = document.querySelector('.alert-success');
        if (successMessage) {
            setTimeout(() => successMessage.style.display = 'none', 5000);
        }
    });
</script>
