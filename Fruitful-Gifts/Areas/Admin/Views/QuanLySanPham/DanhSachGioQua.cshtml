@using X.PagedList
@using X.PagedList.Mvc.Core
@* @model List<Fruitful_Gifts.Database.GioQua> *@
@model X.PagedList.IPagedList<Fruitful_Gifts.Database.GioQua>

@{
    ViewData["Title"] = "Danh sách Giỏ Quà";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section CSS {
    <link rel="stylesheet" href="~/Admin/assets/css/sanpham.css" asp-append-version="true" />
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
                <li class="breadcrumb-item active">Giỏ quà</li>
            </ol>

            <form method="get" asp-action="DanhSachGioQua" class="mb-3">
                <div class="row g-2">
                    <div class="col-md-4">
                        <select class="form-select" name="idDanhMuc" onchange="this.form.submit()">
                            <option value="">-- Tất cả danh mục --</option>
                            @foreach (var dm in ViewBag.DanhMucList)
                            {
                                <option value="@dm.MaDm" @(ViewBag.SelectedCategory == dm.MaDm ? "selected" : "")>@dm.TenDm</option>
                            }
                        </select>
                    </div>
                </div>
            </form>

            <a class="btn btn-success ml-3" href="@Url.Action("ThemGioQua", "QuanLySanPham", new { area = "Admin" })">+ Thêm giỏ quà mới</a>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách giỏ quà
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên Giỏ Quà</th>
                                <th>Giá Bán</th>
                                <th>Danh Mục</th>
                                <th>Trạng Thái</th>
                                <th>Hình Ảnh</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaGq</td>
                                    <td>@item.TenGioQua</td>
                                    <td>@item.GiaBan.ToString("N0") đ</td>
                                    <td>@item.MaDmNavigation?.TenDm</td>
                                    <td>
                                        @if (item.TrangThai == 1)
                                        {
                                            <span class="badge bg-success">Đang kinh doanh</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ngừng kinh doanh</span>
                                        }
                                    <td>
                                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                                            {
                                            <img src="@Url.Content("~/images/sanpham/" + item.HinhAnh)" alt="Ảnh" style="width:80px;" />
                                            }
                                    </td>
                                    @* <td>@item.ChiTietGioQuas.CreatedAt</td> *@
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("CapNhatSanPham", "SanPham", new { id = item.MaGq })" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="@Url.Action("XoaSanPham", "SanPham", new { id = item.MaGq })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("DanhSachGioQua", new { page }),
                             new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        DisplayPageCountAndCurrentLocation = false,
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }
                    })
                </div>
            </div>

        </div>
    </main>
</div>
