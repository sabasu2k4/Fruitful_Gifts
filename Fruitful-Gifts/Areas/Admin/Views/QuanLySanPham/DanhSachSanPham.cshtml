@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Fruitful_Gifts.Database.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}

@section CSS {
    <link rel="stylesheet" href="~/Admin/assets/css/sanpham.css" asp-append-version="true" />
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
                <li class="breadcrumb-item active">Sản phẩm</li>
            </ol>

            <form method="get" asp-action="DanhSachSanPham" class="mb-3">
                <div class="row g-2">
                    <div class="col-md-4">
                        <select class="form-select" name="idDanhMuc" onchange="this.form.submit()">
                            <option value="">-- Tất cả danh mục --</option>
                            @foreach (var dm in ViewBag.DanhMucList)
                            {
                                <option value="@dm.MaLoai" @(ViewBag.SelectedCategory == dm.MaLoai ? "selected" : "")>@dm.TenLoai</option>
                            }
                        </select>
                    </div>
                </div>
            </form>

            <a class="btn btn-success ml-3" href="@Url.Action("ThemSanPham", "QuanLySanPham", new { area = "Admin" })">+ Thêm sản phẩm mới</a>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách sản phẩm
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Nhà cung cấp</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Hình ảnh</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.TenSp</td>
                                    <td>@product.MaLoaiNavigation?.TenLoai</td>
                                    <td>@product.MaNccNavigation?.TenNcc</td>
                                    <td>@product.GiaBan?.ToString("N0")</td>
                                    <td>
                                        @if (product.TrangThai == 1)
                                        {
                                            <span class="badge bg-success">Đang kinh doanh</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ngừng kinh doanh</span>
                                        }
                                    </td>
                                    <td>
                                        <img src="~/images/sanpham/@product.HinhAnh" alt="@product.TenSp" width="80" />
                                    </td>
                                    <td>@product.CreatedAt</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="@Url.Action("CapNhatSanPham", "SanPham", new { id = product.MaSp })" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="@Url.Action("XoaSanPham", "SanPham", new { id = product.MaSp })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("DanhSachSanPham", new { page }),
                             new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        DisplayPageCountAndCurrentLocation = false,
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }
                    })
                </div>
            </div>

        </div>
    </main>
</div>
