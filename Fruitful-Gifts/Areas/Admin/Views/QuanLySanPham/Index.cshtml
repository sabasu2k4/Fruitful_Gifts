@model List<Fruitful_Gifts.Database.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}

@section CSS {
    <link rel="stylesheet" href="~/Admin/csssanpham/style.css" asp-append-version="true" />
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh sách sản phẩm</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
                <li class="breadcrumb-item active">Sản phẩm</li>
            </ol>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách sản phẩm
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Nhà cung cấp</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Trạng thái</th>
                                <th>Hình ảnh</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.TenSp</td>
                                    <td>@product.MaDmNavigation?.TenDm</td>
                                    <td>@product.MaNccNavigation?.TenNcc</td>
                                    <td>@string.Format("{0:C}", product.Gia)</td>
                                    <td>@product.SoLuong</td>
                                    <td>@product.TrangThai</td>
                                    <td>
                                        <img src="@product.HinhAnh" alt="@product.TenSp" width="100" />
                                    </td>
                                    <td>@product.CreatedAt</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
