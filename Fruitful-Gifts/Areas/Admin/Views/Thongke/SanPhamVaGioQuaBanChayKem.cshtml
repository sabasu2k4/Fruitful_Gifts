@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize performance chart
        var ctx = document.getElementById('performanceChart').getContext('2d');
        var performanceChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['SP Bán chạy', 'SP Bán kém', 'Giỏ quà Bán chạy', 'Giỏ quà Bán kém'],
                datasets: [{
                    data: [
        @(ViewBag.SanPhamBanChay?.Count ?? 0),
        @(ViewBag.SanPhamBanKem?.Count ?? 0),
        @(ViewBag.GioQuaBanChay?.Count ?? 0),
        @(ViewBag.GioQuaBanKem?.Count ?? 0)
                            ],
                    backgroundColor: [
                        'rgba(28, 200, 138, 0.8)',
                        'rgba(246, 194, 62, 0.8)',
                        'rgba(54, 185, 204, 0.8)',
                        'rgba(133, 135, 150, 0.8)'
                    ],
                    borderColor: [
                        'rgba(28, 200, 138, 1)',
                        'rgba(246, 194, 62, 1)',
                        'rgba(54, 185, 204, 1)',
                        'rgba(133, 135, 150, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true,
                            pointStyle: 'circle'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return context.label + ': ' + context.raw + ' sản phẩm';
                            }
                        }
                    }
                },
                cutout: '70%',
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });

        // Form validation and interactions
        $(document).ready(function () {
            // Enable tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Form validation
            $('#thresholdForm').on('submit', function (e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });

            // Reset to default values
            $('#resetThresholds').click(function () {
                $('#minBanChaySanPham').val(10);
                $('#maxBanKemSanPham').val(5);
                $('#minBanChayGioQua').val(5);
                $('#maxBanKemGioQua').val(3);
                $('#thresholdForm').removeClass('was-validated');
            });

            // Toggle advanced options
            $('[data-toggle="collapse"]').click(function () {
                $(this).find('i').toggleClass('fa-chevron-down fa-chevron-up');
            });

            // Prevent min < max conflicts
            $('#minBanChaySanPham, #maxBanKemSanPham').change(function () {
                const min = parseFloat($('#minBanChaySanPham').val());
                const max = parseFloat($('#maxBanKemSanPham').val());

                if (min <= max) {
                    $('#maxBanKemSanPham').get(0).setCustomValidity('Giá trị bán kém phải nhỏ hơn giá trị bán chạy');
                } else {
                    $('#maxBanKemSanPham').get(0).setCustomValidity('');
                }
            });

            // Same for gift baskets
            $('#minBanChayGioQua, #maxBanKemGioQua').change(function () {
                const min = parseFloat($('#minBanChayGioQua').val());
                const max = parseFloat($('#maxBanKemGioQua').val());

                if (min <= max) {
                    $('#maxBanKemGioQua').get(0).setCustomValidity('Giá trị bán kém phải nhỏ hơn giá trị bán chạy');
                } else {
                    $('#maxBanKemGioQua').get(0).setCustomValidity('');
                }
            });

            // Tab click handler
            $('.nav-tabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
