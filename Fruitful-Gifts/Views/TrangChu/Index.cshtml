        function themVaoGio(maSp) {
            $.ajax({
                url: '/GioHang/ThemVaoGio',
                type: 'POST',
                data: { maSp: maSp },
                success: function (res) {
                    if (res.success) {
                        // Cập nhật số lượng giỏ hàng
                        $('#soLuongGio').text(res.tongSoLuong);

                        // Hiển thị SweetAlert tự động biến mất
                        Swal.fire({
                            icon: 'success',
                            title: 'Đã thêm vào giỏ hàng!',
                            showConfirmButton: false,
                            timer: 1000
                        });
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: res.message,
                            showConfirmButton: true
                        }).then(() => {
                            window.location.href = "/TaiKhoan/DangNhap";
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi khi thêm vào giỏ hàng!',
                        showConfirmButton: false,
                        timer: 1000
                    });
                }
            });
        }

