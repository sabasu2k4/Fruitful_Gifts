@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        let slideIndex = 0;
        showSlides();

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            slideIndex = n - 1; // Cập nhật slideIndex cho đúng
            showSlides();
        }

        function showSlides() {
            let i;
            let slides = document.getElementsByClassName("slide");
            let dots = document.getElementsByClassName("dot");
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1 }
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
            setTimeout(showSlides, 5000); // Thay đổi 3000 (milliseconds) để điều chỉnh tốc độ chuyển slide (3 giây trong ví dụ này)
        }

        function smoothScroll(container, direction, scrollAmount) {
            const start = container.scrollLeft;
            const end = start + direction * scrollAmount;
            const duration = 700; // Thời gian cuộn (ms)
            let startTime = null;

            function animateScroll(currentTime) {
                if (startTime === null) startTime = currentTime;
                const timeElapsed = currentTime - startTime;
                const progress = Math.min(timeElapsed / duration, 1);

                container.scrollLeft = start + (end - start) * progress;

                if (timeElapsed < duration) {
                    requestAnimationFrame(animateScroll);
                }
            }
            requestAnimationFrame(animateScroll);
        }

        function scrollCategory(direction) {
            const container = document.getElementById('category-scroll');
            const scrollAmount = 700;
            smoothScroll(container, direction, scrollAmount);
        }

        function scrollHotDeal(direction) {
            const container = document.getElementById('product-hotdeal-scroll');
            const scrollAmount = 500;
            smoothScroll(container, direction, scrollAmount);
        }

        function scrollQuaDipLe(direction) {
            const container = document.getElementById('product-dip-le-scroll');
            const scrollAmount = 500;
            smoothScroll(container, direction, scrollAmount);
        }

        function scrollQuaGiaDinhCaNhan(direction) {
