        const texts = [
            "Giảm ngay 120k (Áp dụng cho đơn hàng trên 1 triệu)",
            "Mua ngay để nhận ưu đãi đặc biệt! Số lượng có hạng!"
        ];
        let index = 0;
        function changeText() {
            index = (index + 1) % texts.length; // Chuyển đến đoạn văn bản tiếp theo
            document.getElementById("promo-text").innerText = texts[index]; // Thay đổi nội dung văn bản
